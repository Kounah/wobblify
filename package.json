{
  "name": "@kounaio/boilerplate",
  "version": "0.0.0",
  "description": "a boilerplate project for the basics of the projects I am working on",
  "main": "dist/index.js",
  "scripts": {
    "clean": "node_modules/.bin/rimraf dist",
    "build": "node_modules/.bin/tsc",
    "test": "node_modules/.bin/mocha --timeout 60000 dist/**/*.spec.js --exit",
    "test:dev": "node_modules/.bin/mocha --require ts-node/register --timeout 60000 src/**/*.spec.ts --exit",
    "util:publish": "npm run clean && npm run build && npm run test && npm version patch && npm publish --access=public --scope=@kounaio"
  },
  "author": "kouna",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "chai": "^4.2.0",
    "eslint": "^7.15.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "mocha": "^8.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  }
}
